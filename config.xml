<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jthrilly.networkcanvas" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>R34 Tool</name>
    <description>
        A HTML5 and JavaScript based personal network capture tool.
    </description>
    <author email="joshmelville@gmail.com" href="http://github.com/jthrilly">
        Joshua Melville
    </author>
    <content src="index.html" />
    <icon src="resources/icons/netCanvas-icon.png" />
    <preference name="orientation" value="landscape" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="exit-on-suspend" value="true" />
    <access origin="*" />
    <allow-navigation href="*://*.example.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-file" spec="~2.1.0" />
    <plugin name="com.telerik.plugins.wkwebview" spec="~0.4.0" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.6.3" />
    <plugin name="com.megster.cordova.FileChooser" spec="http://github.com/don/cordova-filechooser.git" />
    <plugin name="cordova-plugin-mfilechooser" />
    <engine name="android" spec="~6.1.2" />
</widget>
